<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, local:true do |f| %>

　<% if @book.errors.any? %>
  <div class=error>
    <ul><h2 class=message>error</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  Title
  <br>
  <%= f.text_field :title %>
  <br>
  Body
  <br>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>
<% end %>


<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>