<% if flash[:notice] %>
    <div class="flash">
         <%= flash[:notice] %>
    </div>
<% end %>
<h1>Books</h1>

<table class=table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
<% @books.each do |book| %>
 <tr class=toukou>
　 <td><span><%= book.title %></span></td>
　 <td><span><%= book.body %></span></td>
　 <td><%= link_to "Show", book_path(book) %></td>
 　<td><%= link_to "Edit", edit_book_path(book) %></td>
　 <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
<% end %>
  </tr>
</table>



<!--formwithの@bookはindex.htmlで使うのならば、controllerのindexの中に定義する必要がある-->
<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>

　<% if @book.errors.any? %>
  <div class=error>
    <ul><h2 class=message>error</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  Title
  <br>
  <%= f.text_field :title %>
  <br>
  Body
  <br>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>

